<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <form action="/addHobbie" method="POST" id="activity-form">
            <input type="text" name="activity_name" placeholder="Add New Activity">
            <button type="submit">Add to Track</button>
        </form>       
        <div id='hobby-window'>
                <% if(hobbies.length > 0) {%>
                    <h1> HERE ARE YOUR HOBBIES</h1> 
                <%} else{%>
                    <h1>Please Add Hobbies</h1>
                <%}%>
                
                <% for(let hob of hobbies) { %> 
                    
                    <div id = 'hobby-box'>
                        <p>Activity:<h3><%= hob.activityName %> </h3></p>
                        <!-- Pick status from the last index of dates array (Stored in reverse order)-->
                        <p>Today's Status:<h3><%= hob.activityProperties[6][1] %></h3></p>
                        <div>
                            <button type="button"><a href="remove-hobby/?id=<%= hob._id %>">remove hobby</a> </button>
                            <!-- Add button acording to the current status-->
                            <% if(hob.activityProperties[6][1] === "None") {%>
                                <button type="button"><a href="update-hobby/?id=<%= hob._id %>&index=0&updateTo=Done">completed</a> </button>
                                <button type="button"><a href="update-hobby/?id=<%= hob._id %>&index=0&updateTo=NotDone">not done</a> </button>
                            <%} else if(hob.activityProperties[6][1] === "Done") {%>
                                <button type="button"><a href="update-hobby/?id=<%= hob._id %>&index=0&updateTo=NotDone">not done</a> </button>
                            <%}else{%>
                                <button type="button"><a href="update-hobby/?id=<%= hob._id %>&index=0&updateTo=Done">completed</a> </button>
                            <%}%>
                            
                           
                            
                        </div>
                    </div>
                <%}%>
             

    </div>
    </body>
</html>